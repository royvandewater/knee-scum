<% if @model: %>
  <h1>
    <%= @model.name %>
    <span class="badge"><%= @model.difficulty %></span>
  </h1>

  <a class="btn btn-default" href="#climbs/<%= @model.id %>/edit">Edit</a>
  <button class="btn btn-danger delete">Delete</button>

<% else: %>
  <h1>&nbsp;</h1>
  <div class="alert alert-danger">
    <strong>Error:</strong>
    Climb was not found
  </div>
<% end %>
