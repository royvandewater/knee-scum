<h1>Listing routes for Buffallo Park</h1>

<div class="row">
  <div class="col-lg-4">
    <ul class="list-group">
      <% @routes.each do |route| %>
        <li class="list-group-item">
          <%= route.name %>
          <span class="badge"><%= route.difficulty %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<br>

<%= link_to 'Add New Route', new_route_path %>
